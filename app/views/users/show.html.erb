<h1>WellBee ğŸ</h1>

<p id="notice"><%= notice %></p>
<h2>
    Welcome, <%= @user.first_name.capitalize %>!
</h2>
<ul class="navigation">
  <li><%= link_to 'Create a Task', new_user_todo_list_path(@user) %></li>
  <li><%= link_to 'Express Gratitude', new_user_gratitude_journal_path(@user) %></li>
  <li><%= link_to 'Healthy Recipes', user_recipes_path(@user) %></li>
  <li><%= link_to 'Exercise', user_exercises_path(@user) %></li>
  <li><%= link_to 'Inspirational Quotes', user_quotes_path(@user) %></li>
  <li><%= link_to 'Edit', edit_user_path(@user) %></li>
  <li><%= link_to 'Back', users_path %></li>
</ul>

<ul class="flex-container">
    <% @user.gratitude_journals.reverse.each do |gratitude_journal| %>
    <li class="flex-item-gratitude"><%= "#{gratitude_journal.title}: #{gratitude_journal.content}" %></li>
    <%end%>
</ul>
<ul class="flex-container">
    <% @user.todo_lists.each do |todo_list| %>
    <li class="flex-item-todo">Task: <%=link_to todo_list.task_name, user_todo_list_path(@user, todo_list)%>
    <br>
    Due date: <%= todo_list.due_date %> 
    </li>
    <%end%>
</ul>






